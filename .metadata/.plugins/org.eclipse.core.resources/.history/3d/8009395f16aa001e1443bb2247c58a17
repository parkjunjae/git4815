package ex03;

import java.util.Scanner;

public class Ex06 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int a, b, c;
		a = sc.nextInt();
		b = sc.nextInt();
		c = sc.nextInt();
		int min = 60* a + b;// min= 60*시+분 = 하나의분으로 변환
		min +=c;// 요리하는시간 더하기
		int hour = (min/60)%24;//시
		int minute = min%60;//분
		
		System.out.println(hour+"시 "+ minute);
	}
}
